<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MealMaestro" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/white</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/white</item>
        <item name="itemActiveIndicatorStyle">@style/ActiveIndicator</item>
        <!--        <item name="itemIconTint">@color/bottom_nav_item_color</item>-->
        <!--        <item name="itemTextColor">@color/bottom_nav_item_color</item>-->
    </style>

    <style name="ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/light_activator</item>
    </style>
</resources>